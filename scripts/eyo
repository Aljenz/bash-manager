#!/bin/bash
SCRIPT_FOLDER=~/.emstel-scripts/packages
BASEDIR=$(dirname $0)

case "$1" in
  install)
      case "$2" in
      vim-config)
        cd $SCRIPT_FOLDER
        git clone https://github.com/mtzd/vim-config.git
        chmod 755 $SCRIPT_FOLDER/vim-config/install.sh
        cd $SCRIPT_FOLDER/vim-config/
        sh install.sh
        exit 0
        ;;
      *)
        echo "Available packages:\n vim-config"
        exit 1
      esac
    ;;
  *)
    echo $"Usage: $0 {install}"
    exit 1
esac
